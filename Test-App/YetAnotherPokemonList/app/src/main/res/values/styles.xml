<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LayoutPageBody">
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
    </style>

    <style name="LayoutBlock">
        <item name="android:layout_marginTop">10dip</item>
    </style>

    <style name="TextViewHeader">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/toolbarText</item>
    </style>

    <style name="TextViewSection">
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewItem">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dip</item>
    </style>

    <style name="TextViewLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">10dip</item>
    </style>

    <style name="TextViewValue">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dip</item>
    </style>

</resources>